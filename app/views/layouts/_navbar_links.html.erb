<ul class="nav navbar-nav navbar-right">
  <% if current_user %>
    <!-- Show photo -->
    <li>
      <%= image_tag current_user.small_image, class: 'img-responsive' %>
    </li>

    <!-- Sign out link -->
    <li>
      <%= link_to fa_icon('sign-out', text: 'Sign Out'), signout_path, id: 'sign_out' %>
    </li>
  <% else %>
    <!-- Sign in link -->
    <li>
      <%= link_to fa_icon('sign-in', text: 'Sign in with Facebook'), '/auth/facebook', id: 'sign_in' %>
    </li>
  <% end %>
</ul>